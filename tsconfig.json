{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"vite/client"
		],
	},
	"include": [
		"packages/lib/src/*",
		"packages/demo/src/*"
	],
	"exclude": [
		"src/**/back/**"
	]
}